{
    "ignore": [".*", "*.json", "*.txt", "*.md", "*.yml", "*.yaml", "**/.*", "**/*.json", "**/*.txt", "**/*.md", "**/*.yml", "**/*.yaml", "Dockerfile"],
    "license": "HEADER.txt",
    "licenseFormats": {
        "js": {
            "prepend": "/**",
            "append": " */\n",
            "eachLine": {
                "prepend": " * "
            }
        },
        "ts": {
            "prepend": "/**",
            "append": " */\n",
            "eachLine": {
                "prepend": " * "
            }
        }
    },
    "trailingWhitespace": "TRIM"
}
